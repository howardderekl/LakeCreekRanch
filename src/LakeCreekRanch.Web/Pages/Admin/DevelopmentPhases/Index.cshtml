@page
@model LakeCreekRanch.Web.Pages.Admin.DevelopmentPhases.IndexModel

@{
    ViewData["Title"] = "Maintain Development Phases";
}

<h2>Development Phase List</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.DevelopmentPhase[0].Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DevelopmentPhase[0].StartDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DevelopmentPhase[0].CompleteDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DevelopmentPhase[0].HideFromWebsite)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.DevelopmentPhase) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompleteDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HideFromWebsite)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.DevelopmentPhaseId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.DevelopmentPhaseId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.DevelopmentPhaseId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
